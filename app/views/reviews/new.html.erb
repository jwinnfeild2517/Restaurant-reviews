<h2>Review Form for <%= @restaurant.name %></h2>

<%= form_for [@restaurant, @review] do |f| %>
    <div class="field">
      <%= f.label :rating, "Rating" %><br />
      <%= f.text_field :rating %>
    </div>

    <div class="field">
      <%= f.label :body, "Review" %><br />
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Add Review'%>
    </div>
<% end %>
